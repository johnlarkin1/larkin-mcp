{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Larkin MCP Resource Schemas",
  "description": "JSON schemas for larkin-mcp resources, used to ensure consistency across Python, TypeScript, and Rust implementations.",
  "definitions": {
    "metadata": {
      "type": "object",
      "description": "MCP server metadata returned by get_metadata tool",
      "properties": {
        "mcp_version": {
          "type": "string",
          "description": "Server version in semver format",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "mcp_website": {
          "type": "string",
          "description": "URL to the MCP documentation/website",
          "format": "uri"
        },
        "resume_last_updated": {
          "type": "string",
          "description": "Date the resume was last updated",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        }
      },
      "required": ["mcp_version", "mcp_website", "resume_last_updated"]
    },
    "healthCheck": {
      "type": "object",
      "description": "Health check response from health_check tool",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["healthy", "degraded", "unhealthy"]
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "resources": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/resourceStatus"
          }
        }
      },
      "required": ["status", "version", "resources"]
    },
    "resourceStatus": {
      "type": "object",
      "description": "Status of a single resource",
      "properties": {
        "available": {
          "type": "boolean"
        },
        "size_bytes": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["available", "size_bytes"]
    }
  },
  "type": "object",
  "properties": {
    "resourceCategories": {
      "type": "array",
      "description": "List of valid resource category names",
      "items": {
        "type": "string",
        "enum": ["resume", "bio", "projects", "contact", "skills", "work", "tennis"]
      }
    }
  }
}
