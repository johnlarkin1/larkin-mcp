{
  "mcpServers": {
    "larkin-mcp-py": {
      "command": "uv",
      "args": ["--directory", "./py", "run", "mcp", "run", "src/main.py"]
    },
    "larkin-mcp-ts": {
      "command": "bun",
      "args": ["run", "--cwd", "./tsx", "src/index.ts"]
    },
    "larkin-mcp-rs": {
      "command": "cargo",
      "args": ["run", "--manifest-path", "./rs/Cargo.toml", "--release", "-q"]
    }
  }
}
